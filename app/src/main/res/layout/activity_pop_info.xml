<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/pop_bg"
    android:orientation="vertical"
    tools:context=".PopInfoActivity">

    <Button
        android:theme="@style/AppTheme.Button2"
        android:id="@+id/btn_close"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_gravity="right"
        android:text="X"
        android:layout_marginRight="10dp"
        android:layout_marginTop="5dp"
        android:textStyle="bold"
        android:background = "@drawable/roundedbutton"
        />

    <TextView
        android:id="@+id/titulo_popup"
        android:layout_width="280dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:layout_gravity="center"
        android:text="Informações gerais do Outdoor"
        android:background="@drawable/textviewconers"
        android:textColor="@color/color_red"
        android:textStyle="bold"
        android:textSize="20dp"
        android:padding="10dp"
        android:textAlignment="center"
        />

    <TextView
        android:id="@+id/titulo_outdoor_Label"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:layout_gravity="center"
        android:textSize="17dp"
        android:text="Identificação do Outdoor"
        android:background="@drawable/textviewconers"
        android:textColor="@color/color_red"
        android:textStyle="bold"
        android:padding="10dp"
        android:textAlignment="center"
        />

    <TextView
        android:id="@+id/titulo_outdoor_show"
        android:layout_width="200dp"
        android:layout_gravity="center"
        android:layout_marginTop="20dp"
        android:layout_height="wrap_content"
        android:padding="5dp"
        android:textAlignment="center"
        android:textSize="15dp"
        android:background="@drawable/textviewconers"
        android:textColor="@color/cardview_dark_background"
        android:textStyle="bold"
        />
    <TextView
        android:id="@+id/dono_outdoor_Label"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:text="Informações para aluguel"
        android:textAlignment="center"
        android:textColor="@color/color_red"
        android:textStyle="bold"
        android:textSize="17dp"
        android:padding="10dp"
        android:layout_marginTop="20dp"
        android:layout_gravity="center"
        android:background="@drawable/textviewconers"
        />

    <TextView
        android:id="@+id/dono_outdoor_show"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="20dp"
        android:background="@drawable/textviewconers"
        android:textAlignment="center"
        android:textStyle="bold"
        android:padding="5dp"
        android:textSize="15dp"
        android:textColor="@color/cardview_dark_background" />


</LinearLayout>