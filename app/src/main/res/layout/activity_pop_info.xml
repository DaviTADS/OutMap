<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/pop_bg"
    android:orientation="vertical"
    tools:context=".PopInfoActivity">

    <Button
        android:id="@+id/btn_close"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_gravity="right"
        android:text="X"
        android:textStyle="bold"
        />

    <TextView
        android:id="@+id/titulo_outdoor_Label"
        android:layout_width="200dp"
        android:layout_height="50dp"
        android:layout_marginTop="30dp"
        android:layout_gravity="center"
        android:text="Identificação do Outdoor"
        android:background="@color/cardview_light_background"
        android:textColor="@color/cardview_dark_background"
        android:textStyle="bold"
        android:textAlignment="center"
        />

    <TextView
        android:id="@+id/titulo_outdoor_show"
        android:layout_width="200dp"
        android:layout_gravity="center"
        android:layout_marginTop="30dp"
        android:layout_height="50dp"
        android:background="@color/cardview_light_background" />
    <TextView
        android:id="@+id/dono_outdoor_Label"
        android:layout_width="200dp"
        android:layout_height="50dp"
        android:text="Informações para aluguel"
        android:textAlignment="center"
        android:textColor="@color/cardview_dark_background"
        android:textStyle="bold"
        android:layout_marginTop="30dp"
        android:layout_gravity="center"
        android:background="@color/cardview_light_background"
        />

    <TextView
        android:id="@+id/dono_outdoor_show"
        android:layout_width="200dp"
        android:layout_gravity="center"
        android:layout_marginTop="30dp"
        android:layout_height="50dp"
        android:background="@color/cardview_light_background" />

    <Button
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:text="Alugar Outdoor"
        android:layout_gravity="center"
        android:layout_marginTop="40dp"/>


</LinearLayout>